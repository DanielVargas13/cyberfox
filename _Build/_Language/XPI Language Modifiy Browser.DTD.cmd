cls
for /f %%f in ('dir /b "%InputPath%"') do copy /y  "%OutputPath%\%%~nf.browser.dtd" "%InputPath%\%%f\browser\chrome\%%~nf\locale\browser\browser.dtd"
exit /b %ERRORLEVEL%